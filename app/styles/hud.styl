.hud
  height 100%

  .left, .center, .right
    align-items center
    display flex
    height 100%
    position absolute
    width 100%

  .center
    justify-content center

  .right
    justify-content flex-end

    .btn
      margin-left 5px

  .market
    background-color white
    display none
    left 0
    height 100%
    position fixed
    top 0
    width 100%
    z-index 100

    h1
      text-align center

    .close
      position absolute
      right 10px
      top 10px
